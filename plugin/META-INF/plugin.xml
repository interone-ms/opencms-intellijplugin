<idea-plugin version="2">
    <name>OpenCmsModuleDeveloper</name>
    <description>Sync of OpenCms modules from local FS to VFS</description>
    <version>0.1</version>
    <vendor>mediaworx Berlin AG</vendor>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <application-components>
    <!-- Add your application components here -->
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.mediaworx.intellij.opencmsplugin.components.OpenCmsProjectConfigurationComponent</implementation-class>
        </component>
        <component>
            <implementation-class>com.mediaworx.intellij.opencmsplugin.components.OpenCmsPlugin</implementation-class>
        </component>
        <component>
            <implementation-class>com.mediaworx.intellij.opencmsplugin.components.OnFileChangeComponent</implementation-class>
        </component>
    </project-components>

    <module-components>
	    <component>
		    <implementation-class>com.mediaworx.intellij.opencmsplugin.components.OpenCmsModuleConfigurationComponent
		    </implementation-class>
	    </component>
    </module-components>


	<actions>
		<group id="OpenCmsPlugin.ActionMenu" text="_OpenCms" description="OpenCms Plugin Actions">
			<action id="OpenCmsPlugin.SyncAction" class="com.mediaworx.intellij.opencmsplugin.actions.OpenCmsSyncAction" text="OpenCms: _Sync selected Files/Folders/Modules"
					description="Sync file, folder or module with OpenCms" icon="/icons/opencms_menu.png">
				<keyboard-shortcut keymap="$default" first-keystroke="shift ctrl D"/>
			</action>
			<action id="OpenCmsPlugin.SyncAllAction" class="com.mediaworx.intellij.opencmsplugin.actions.OpenCmsSyncAllAction" text="OpenCms: Sync all _Modules"
			        description="Sync all modules with OpenCms" icon="/icons/opencms_menu.png">
				<keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt D"/>
			</action>
		</group>
		<action id="OpenCmsPlugin.EditorPopupAction" class="com.mediaworx.intellij.opencmsplugin.actions.OpenCmsEditorPopupAction" text="OpenCms: Sync File" description="OpenCms: Sync the file in the Editor to OpenCms" icon="/icons/opencms_menu.png" />
		<action id="OpenCmsPlugin.ProjectViewPopupAction" class="com.mediaworx.intellij.opencmsplugin.actions.OpenCmsSyncAction" text="OpenCms: Sync selected files/folders" description="OpenCms: Sync all selected Files/Folders to OpenCms" icon="/icons/opencms_menu.png" />
	</actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
</idea-plugin>
<idea-plugin version="2">
	<name>OpenCms</name>
	<description>
        The OpenCms Plugin for IntelliJ lets you sync files and folders from your local Filesystem to the OpenCms VFS
        and vice versa. It enables OpenCms direct publishing right from your IDE and it lets you package your modules
        into module zips that can be imported in OpenCms.
    </description>
	<version>1.5</version>
	<vendor>mediaworx berlin AG</vendor>

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="107.105"/>

	<application-components>
		<!-- Add your application components here -->
	</application-components>

	<project-components>
		<component>
			<implementation-class>com.mediaworx.intellij.opencmsplugin.configuration.OpenCmsPluginConfigurationComponent
			</implementation-class>
		</component>
		<component>
			<implementation-class>com.mediaworx.intellij.opencmsplugin.OpenCmsPlugin</implementation-class>
		</component>
	</project-components>

	<module-components>
		<component>
			<implementation-class>com.mediaworx.intellij.opencmsplugin.configuration.OpenCmsModuleConfigurationComponent
			</implementation-class>
		</component>
	</module-components>

	<actions>
	</actions>

	<extensions defaultExtensionNs="com.intellij">
	</extensions>
</idea-plugin>